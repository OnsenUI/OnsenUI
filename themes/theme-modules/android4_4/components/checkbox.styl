@require utils

input[type="checkbox"]
  hide-input()

.checkbox
  reset-box-model()
  inline-block()
  reset-cursor()

.checkbox__label
  inline-block()
  reset-cursor()

.checkbox--disabled
  disabled()

.checkbox:before,
.checkbox:after
  content ''
  position absolute

.checkbox:before
  reset-box-model()
