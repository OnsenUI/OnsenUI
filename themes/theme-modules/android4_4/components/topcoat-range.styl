@import '../../common/topdoc-range'
@require '../../common/range'

.topcoat-range
  @extend .range
  border-radius var-border-radius
  border var-border
  border var-border--range
  background-color var-background-color--input
  background-color var-background-color--range
  height var-height--range__track
  border-radius var-border-radius--large
  border-radius var-border-radius--range
  margin-top 12px
  margin-bottom 12px

.topcoat-range::-moz-range-track
  border-radius var-border-radius
  border var-border
  background-color var-background-color--input
  background-color var-background-color--range
  height var-height--range__track
  border-radius var-border-radius--large
  border-radius var-border-radius--none

.topcoat-range::-webkit-slider-thumb
  @extend .range__thumb--webkit
  height var-height
  height var-width--range__thumb
  width var-width--range__thumb
  background-color var-background-color
  background-color var-background-color--range__thumb
  border var-border
  border var-range-border
  border-radius var-border-radius
  border-radius var-round-border
  box-shadow var-box-shadow

.topcoat-range::-moz-range-thumb
  @extend .range__thumb
  height var-height
  width var-width--range__thumb
  background-color var-background-color
  border var-border
  border var-range-border
  border-radius var-border-radius
  border-radius var-round-border
  box-shadow var-box-shadow

.topcoat-range:focus::-webkit-slider-thumb
  border var-border--focus
  border var-border--range__thumb--focus
  box-shadow var-box-shadow--focus

.topcoat-range:focus::-moz-range-thumb
  border var-border--focus
  border var-border--range__thumb--focus
  box-shadow var-box-shadow--focus

.topcoat-range:disabled
  @extend .range:disabled

