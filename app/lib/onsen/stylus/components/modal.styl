// NOTE: You can't use @extend that break component independent and topdoc parsing.

// internal variables
var-modal-background-color := rgba(0, 0, 0, 0.7)
var-modal-color := white

/*! topdoc
  name: Modal
  class: modal
  markup:
    <div class="modal">
      <div class="modal__content">
        Message Text
      </div>
    </div>
*/

modal()
  reset-container()
  reset-base()
  reset-box-model()
  reset-font()

modal__content()
  reset-container()
  reset-base()
  reset-box-model()
  reset-font()

.modal
  modal()
  overflow hidden
  background-color var-modal-background-color
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  width 100%
  height 100%
  display table
  z-index 2147483647

.modal__content
  modal__content()
  display table-cell
  vertical-align middle
  text-align center
  color var-modal-color

