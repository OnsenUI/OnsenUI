// NOTE: You can't use @extend that break component independent and topdoc parsing.

// internal variables
var-dialog-background-color = $dialog-background-color

/*! topdoc
  name: Dialog
  class: dialog
  markup:
    <div class="dialog-mask"></div>
    <div class="dialog">
      <div class="page">
        <p style="text-align:center;margin-top:40px;opacity:0.4;">Content</p>
      </div>
    </div>
*/
.dialog
  reset-box-model()
  reset-base()
  reset-cursor()
  reset-font()
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  margin auto auto
  background-color var-dialog-background-color
  box-shadow 0 2px 12px rgba(0, 0, 0, 0.07)
  overflow hidden
  min-width 270px
  min-height 100px
  text-align left
  border-radius 4px

.dialog-mask
  reset-base()
  reset-cursor()
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  background-color rgba(0, 0, 0, 0.3)
